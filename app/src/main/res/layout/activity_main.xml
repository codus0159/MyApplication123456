<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cookmap.cookandroid.com.myapplication123456.MainActivity">


    <Button
        android:id="@+id/smsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="48dp"
        android:text="SMS보내기" />

    <Button
        android:id="@+id/recogbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="전화걸기"
        android:layout_below="@+id/smsbutton"
        android:layout_alignStart="@+id/smsbutton" />

    <Button
        android:id="@+id/servicebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 위치"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/recogbutton" />

</RelativeLayout>
