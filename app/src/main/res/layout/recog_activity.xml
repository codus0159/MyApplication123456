<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btRecog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:text="RECOG"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp" />

    <Button
        android:id="@+id/btTts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TTS"
        android:layout_alignBaseline="@+id/btRecog"
        android:layout_alignBottom="@+id/btRecog"
        android:layout_toEndOf="@+id/btRecog"
        android:layout_marginStart="53dp" />

    <EditText
        android:id="@+id/etTts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="스마트디바이스"
        android:layout_below="@+id/btRecog"
        android:layout_alignStart="@+id/btRecog" />

</RelativeLayout>